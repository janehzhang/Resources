ALTER TABLE student RENAME COLUMN name  TO sname; --修改表列名
ALTER TABLE course RENAME COLUMN id  TO cid; --修改表列名

drop table student;

create table student(
          sid int not null primary key,
          name varchar(20)
          );
insert into student
select 1,'张剑华' from dual
union all  
select 2,'齐白石' from dual
union
select 3,'刘禹锡' from dual
union all  
select 4,'钱学森' from dual;
select * from student;

insert into student values(5,'刘星');


create table course(
          cid int not null primary key,
          cteacher varchar(30),
          cname varchar(20)
         );
insert into course
select 1,'陈小燕老师','语文' from dual
union all  
select 2,'刘雨老师','数学' from dual
union
select 3,'杰克老师','英语' from dual;
select * from course;



--选了语文数学的学生
select s.sid,s.sname from student s,
       (select sc.sid from sc,course where sc.cid = course.cid and course.cname in ('Chinese','Math')
       group by sid) x where s.sid = x.sid;

--两门及以上不及格的学生信息
select s.sname,xx.sid,xx.avg_grade from student s,(select s.sid, trunc(avg(sc.cgrade),2) avg_grade from student s, sc,
      (select sid from sc where cgrade<60 group by sid having count(DISTINCT cid)>=2   --group 加 having 加 DISTINCT 厉害 ！！！
      ) x
      where s.sid = x.sid and sc.sid = x.sid
      group by s.sid
)xx where s.sid = xx.sid;

